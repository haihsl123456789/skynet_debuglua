}
.PlayerPayInf{
    matchPay 1  : integer		
    rank 2  : integer  
}

.Player {
	pid 1 : integer
    nickname 2 : string   
    headimage 3 : string
	sex 4 : integer                       #性别  0：未设置；1：男；2：女

	position 10  : integer           #桌子位置编号
	cannonType 11  : integer
	cannonTimes 12  : integer		#炮台级别,1表示最低级别

	bullet 20  : integer			#比赛用 剩余子弹
	gold 21 : integer  
	score 22  : integer				#比赛用 分数
    
    pay 30 : PlayerPayInf
}

