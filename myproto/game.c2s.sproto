						# 结果为1: 用户名密码错误：
		pid 1 : integer	#玩家ID
		token	  2	: string	#令牌
	}
}

Register 101  {	
	request {
		username 0: string
		password 1: string
	}
	response {
		result 0 : integer	
					# 0 is ok
					# 1 :  用户名已存在
		pid 1 : integer
	}
}

Chat 102 {							
	request {
		des_pid    1 : integer	#接收人id，0: broadcast
		mgs   2 : string     #utf8
	}
	response {
		result 0 : integer  # 0 : ok， 1 : 不成功
	}
}

